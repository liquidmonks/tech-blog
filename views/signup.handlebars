<section class="py-20 bg-[#4E2A84] px-10">
    <div class="lg:w-1/3 md:w-6/12 sm:w-8/12 w-full mx-auto text-center">
        <h3 class="py-5 text-3xl font-bold">Sign-up</h3>
        <hr class="border-white border-2">
        <p class="text-xl py-5">Please sign up to proceed.</p>
        <div class="bg-white rounded-xl p-5">
            <form>
                <div class="control" id="username-div">
                    <input class="w-full bg-white rounded p-3 text-xl border" type="text" placeholder="Username" autofocus="" id="signup-username">
                </div>
                <p class="py-4">Minimum 8 characters</p>
                <div class="control" id="password-div">
                    <input class="w-full bg-white rounded p-3 text-xl border" type="password" placeholder="Your Password" id="signup-password">
                </div>
                
                <button class="w-full bg-[#4E2A84] text-white rounded p-3 text-xl mt-4" id="signup-btn">Sign-up <i class="fa fa-sign-in" aria-hidden="true"></i></button>
            </form>
        </div>
        <p class="text-[#000000] mt-5">
            <a href="/login">Login Instead?</a> &nbsp;&nbsp;
        </p>
    </div>
</section>

