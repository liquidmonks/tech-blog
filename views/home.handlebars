<section class="px-5 py-10 bg-[#4E2A84]">
    <h1 class="text-white text-center font-bold text-2xl">Featured Posts</h1>
</section>


    <div class="px-10">
        <!-- START ARTICLE FEED -->
        <section class="articles py-10">
            <div class="lg:w-8/12 md:w-10/12 w-full mx-auto">
              
                <div class="flex flex-wrap">
                    <!-- START ARTICLE -->
                    {{#each posts}}
                        <div class="md:w-1/2 w-full px-3">
                            <div class="shadow-lg rounded p-5 mb-4 h-full">
                                <div>
                                    <h3 class="text-[#4E2A84] text-lg"><a href="./post/{{id}}">{{title}}</a></h3> 
                                    <h4 class="font-semibold mb-3 text-sm">Posted on {{formDate createdAt}}</h4>
                                    <p>{{contents}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    <!-- END ARTICLE -->
                </div>
              </div>

        </section>
        <!-- END ARTICLE FEED -->
    </div>

